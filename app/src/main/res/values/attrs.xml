<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="toolbar_popup_theme" format="reference" />


    <!--
        Expandable Text View
    -->
    <declare-styleable name="ExpandableTextView">
        <attr name="animation_duration" format="integer"/>
    </declare-styleable>

    <!--
        Blur Image View
    -->
    <declare-styleable name="RealtimeBlurViewTest">
        <attr name="realtimeBlurRadius" format="dimension"/>
        <attr name="realtimeDownsampleFactor" format="float"/>
        <attr name="realtimeOverlayColor" format="color"/>
    </declare-styleable>


    <!--
        Sliding Up Panel
    -->
    <declare-styleable name="SlidingUpPanelLayout">
        <attr name="umanoPanelHeight" format="dimension" />
        <attr name="umanoShadowHeight" format="dimension" />
        <attr name="umanoParallaxOffset" format="dimension" />
        <attr name="umanoFadeColor" format="color" />
        <attr name="umanoFlingVelocity" format="integer" />
        <attr name="umanoDragView" format="reference" />
        <attr name="umanoScrollableView" format="reference" />
        <attr name="umanoOverlay" format="boolean"/>
        <attr name="umanoClipPanel" format="boolean"/>
        <attr name="umanoAnchorPoint" format="float" />
        <attr name="umanoInitialState" format="enum">
            <enum name="expanded" value="0" />
            <enum name="collapsed" value="1" />
            <enum name="anchored" value="2" />
            <enum name="hidden" value="3" />
        </attr>
        <attr name="umanoScrollInterpolator" format="reference" />
    </declare-styleable>

    <!--
        Pager Tab Indicator
    -->
    <declare-styleable name="PagerTabsIndicator">
        <attr name="tab_padding" format="dimension"/>
        <attr name="tab_text_color" format="color"/>
        <attr name="tab_text_size" format="dimension"/>
        <attr name="tab_show_divider" format="boolean"/>
        <attr name="tab_lock_expanded" format="boolean"/>
        <attr name="tab_indicator"/>
        <attr name="tab_indicator_resource" format="reference"/>
        <attr name="tab_indicator_scale_type"/>
        <attr name="tab_indicator_height" format="dimension"/>
        <attr name="tab_indicator_margin" format="dimension"/>
        <attr name="tab_indicator_bg_height" format="dimension"/>
        <attr name="tab_indicator_color" format="color"/>
        <attr name="tab_indicator_bg_color" format="color"/>
        <attr name="tab_divider_width" format="dimension"/>
        <attr name="tab_divider_margin" format="dimension"/>
        <attr name="tab_divider_color" format="color"/>
        <attr name="tab_divider_resource" format="reference"/>
        <attr name="tab_show_bar_indicator" format="boolean"/>
        <attr name="tab_elevation" format="dimension"/>
        <attr name="tab_disable_animation" format="boolean"/>
        <attr name="tab_highlight_text" format="boolean"/>
        <attr name="tab_highlight_text_color" format="color"/>
    </declare-styleable>

    <attr name="tab_indicator">
        <enum name="top_bar" value="0" />
        <enum name="bottom_bar" value="1" />
        <enum name="background" value="2" />
    </attr>
    <attr name="tab_indicator_scale_type">
        <enum name="fitXY" value="0"/>
        <enum name="centerInside" value="1"/>
    </attr>


    <!--
        Material Shadows
    -->
    <attr name="shadowOffsetX" format="float" />
    <attr name="shadowOffsetY" format="float" />
    <attr name="shadowAlpha" format="float" />

    <attr name="calculateAsync" format="boolean" />
    <attr name="showWhenAllReady" format="boolean" />
    <attr name="animateShadow" format="boolean" />
    <attr name="animationDuration" format="integer" />

    <declare-styleable name="MaterialShadowViewWrapper">
        <attr name="shadowOffsetX" />
        <attr name="shadowOffsetY" />
        <attr name="shadowAlpha" />

        <attr name="calculateAsync" />
        <attr name="showWhenAllReady" />
        <attr name="animateShadow" />
        <attr name="animationDuration" />
    </declare-styleable>

    <declare-styleable name="MaterialShadowFrameLayoutWrapper">
        <attr name="shadowOffsetX" />
        <attr name="shadowOffsetY" />
        <attr name="shadowAlpha" />

        <attr name="calculateAsync" />
        <attr name="showWhenAllReady" />
        <attr name="animateShadow" />
        <attr name="animationDuration" />
    </declare-styleable>

</resources>