<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp">
    <!--android:background="@drawable/bg2"-->

    <TextView
        android:id="@+id/tvTag1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step Two"
        android:layout_marginTop="40dp"
        android:textColor="@color/clrWhite"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/tvTag2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Rounds"
        android:textColor="@color/clrWhite"
        android:textSize="30dp"
        android:layout_below="@+id/tvTag1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTag3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTag2"
        android:layout_marginTop="50dp"
        android:text="Add judgement criterias and assign max points."
        android:textColor="@color/clrWhite"
        android:textSize="16dp" />


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardScoreSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tvTag3"

        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="11dp"
        card_view:cardUseCompatPadding="true">
        <!--android:layout_marginTop="10dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/tuto_cri_1_round_rect_fill"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Criteria"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv1"
                    android:layout_toLeftOf="@+id/ll1"
                    android:textColor="@color/clrBlack"
                    android:textSize="17dp" />

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/clrBlack"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pts"
                        android:textColor="@color/clrBlack"
                        android:textSize="17dp" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/tuto_cri_2_round_rect_fill"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Criteria"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv2"
                    android:layout_toLeftOf="@+id/ll2"
                    android:textColor="@color/clrBlack"
                    android:textSize="17dp" />

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/clrBlack"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pts"
                        android:textColor="@color/clrBlack"
                        android:textSize="17dp" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/tuto_cri_3_round_rect_fill"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Criteria"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv3"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ll3"
                    android:textColor="@color/clrBlack"
                    android:textSize="17dp" />

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/clrBlack"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pts"
                        android:textColor="@color/clrBlack"
                        android:textSize="17dp" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>