<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.mybsolutions.practrapp.MainActivity">

    <ImageView
        android:id="@+id/constMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/org_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tvIam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am an"
            android:textColor="@color/iam_color"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Head"
            android:textColor="@android:color/white"
            android:textSize="32dp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp">

            <View
                android:id="@+id/dummyView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>

            <LinearLayout
                android:id="@+id/lnFirst"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/dummyView"
                android:background="@drawable/judge_selector"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tvFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judge"
                    android:textColor="@android:color/white" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnSecond"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_toRightOf="@+id/dummyView"
                android:layout_margin="5dp"
                android:background="@drawable/participant_selector"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tvSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Participant"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </RelativeLayout>



